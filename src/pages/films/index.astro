---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
const films = await getCollection("films");
import { formatDate } from "src/helpers";
---

<Layout pageTitle="Liste des films">
  <h1 class="font-bold text-2xl text-center my-8">Liste des films</h1>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 p-4"
  >
    {
      films.map((film) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden transform transition duration-500 hover:scale-105">
          <a href={`/films/${film.id}`} class="block p-4">
            <h2 class="text-lg font-semibold text-gray-800 mb-2">
              {film.data.titre}
            </h2>
            <p class="text-blue-600 mb-2">{formatDate(film.data.dateSortie)}</p>
            <p class="text-gray-600">{film.data.synopsis}</p>
          </a>
        </div>
      ))
    }
  </div>
</Layout>
