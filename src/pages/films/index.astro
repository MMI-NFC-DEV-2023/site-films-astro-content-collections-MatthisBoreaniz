---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
const films = await getCollection("films");
---

<Layout pageTitle="Liste des personnes">
  <h1 class="font-bold text-2xl text-center">Liste des films</h1>
  <ul class="my-5 flex gap-5 justify-center">
    {
      films.map((film) => (
        <li>
          <a href={`/films/${film.id}`} class="bg-red-400 rounded-full text-white hover:bg-white hover:text-red-400 hover:broder hover:border-1 hover:border-red-400 hover:p-4 p-2 ">{film.data.titre}</a>
        </li>
      ))
    }
  </ul>
  <!-- <pre>
          {JSON.stringify(films, null, 2)}
    </pre> -->
</Layout>
